<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Back"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <EditText
            android:id="@+id/result"
            android:layout_width="413dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Enter the numbers"
            android:inputType="text"
            android:textSize="45dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="1dp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="15dp">
        <Button
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:ellipsize="none"
            android:text="1"
            android:textColorLink="#D02E2E"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="8dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="2"
            android:textSize="25dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/grey"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="111dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="3"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button2"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="215dp" />

        <Button
            android:id="@+id/buttonadd"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="+"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/button3"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="316dp" />
    </LinearLayout>
    <!--    need to start from right here -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="15dp">
        <Button
            android:id="@+id/button4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="4"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="8dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="321dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="5"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/button5"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="111dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="6"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button6"
            app:layout_constraintTop_toTopOf="@+id/button6"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="215dp" />

        <Button
            android:id="@+id/buttonsub"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="-"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            app:layout_constraintBottom_toBottomOf="@+id/buttonadd"
            app:layout_constraintTop_toTopOf="@+id/buttonadd"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="316dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="15dp">
        <Button
            android:id="@+id/button7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="7"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="8dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="411dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="8"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button9"
            app:layout_constraintTop_toTopOf="@+id/button9"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="111dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="9"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button10"
            app:layout_constraintTop_toTopOf="@+id/button10"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="215dp" />

        <Button
            android:id="@+id/buttonmul"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="*"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button11"
            app:layout_constraintTop_toTopOf="@+id/button11"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="316dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="15dp">
        <Button
            android:id="@+id/buttondeci"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="."
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="8dp"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="501dp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="0"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="8dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="501dp" />

        <Button
            android:id="@+id/buttondel"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="c"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="8dp"
            tools:layout_editor_absoluteX="215dp"
            tools:layout_editor_absoluteY="501dp" />

        <Button
            android:id="@+id/buttondiv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="/"
            android:textSize="25dp"
            android:backgroundTint="@color/grey"

            tools:layout_editor_absoluteX="316dp"
            tools:layout_editor_absoluteY="501dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="110dp">
        <Button
            android:id="@+id/buttonres"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:text="="
            android:textSize="25dp"
            android:backgroundTint="@color/grey"
            android:layout_alignBottom="@id/buttondiv"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="602dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>